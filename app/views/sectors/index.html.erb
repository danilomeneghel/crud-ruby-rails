<p id="notice"><%= notice %></p>

<h1>Sectors</h1>

<%= link_to 'New Sector', new_sector_path, :class => 'btn btn-primary' %>

<div class="search-right">
	<%= form_tag sectors_path, :method => :get do %>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search", :class => 'btn btn-primary' %>
	<% end %>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th colspan="3" class="text-center col-sm-2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @sectors.each do |sector| %>
      <tr>
        <td><%= sector.name %></td>
        <td class="text-center"><%= link_to 'Show', sector, :class => 'btn btn-default' %></td>
        <td class="text-center"><%= link_to 'Edit', edit_sector_path(sector), :class => 'btn btn-default' %></td>
        <td class="text-center"><%= link_to 'Delete', sector, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pag-right">
	<%= will_paginate @sectors, renderer: BootstrapPagination::Rails %>
</div>
