<p id="notice"><%= notice %></p>

<h1>Skills</h1>

<%= link_to 'New Skill', new_skill_path, :class => 'btn btn-primary' %>

<div class="search-right">
	<%= form_tag skills_path, :method => :get do %>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search", :class => 'btn btn-primary' %>
	<% end %>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th colspan="3" class="text-center col-sm-2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.name %></td>
        <td class="text-center"><%= link_to 'Show', skill, :class => 'btn btn-default' %></td>
        <td class="text-center"><%= link_to 'Edit', edit_skill_path(skill), :class => 'btn btn-default' %></td>
        <td class="text-center"><%= link_to 'Delete', skill, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pag-right">
	<%= will_paginate @skills, renderer: BootstrapPagination::Rails %>
</div>
